<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="WorkTypeReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Fields from the worktype dto -->
    <field name="workTypeId" class="java.lang.Integer"/>
    <field name="workType" class="java.lang.String"/>
    <field name="workTypeCode" class="java.lang.String"/>
    <field name="isImportant" class="java.lang.String"/>

    <!-- Report Title -->
    <title>
        <band height="60">
            <staticText>
                <reportElement x="0" y="0" width="555" height="30"/>
                <text><![CDATA[ Work Types Dashboard Report]]></text>
            </staticText>
        </band>
    </title>

    <!-- Column Headers -->
    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20"/>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="150" height="20"/>
                <text><![CDATA[Work Type]]></text>
            </staticText>
            <staticText>
                <reportElement x="250" y="0" width="150" height="20"/>
                <text><![CDATA[Code]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="150" height="20"/>
                <text><![CDATA[Important?]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Table Rows -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{workTypeId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{workType}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="250" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{workTypeCode}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="0" width="150" height="20"/>
                <textFieldExpression><![CDATA[$F{isImportant}]]></textFieldExpression>
            </textField>
        </band>
    </detail>




</jasperReport>
